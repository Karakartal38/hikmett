<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:padding="14dp">

    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Fethur-Rabbani"
        android:textSize="11sp"
        android:textColor="#D4B872"
        android:background="@drawable/badge_hikmet"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="1 / 115"
        android:textSize="10sp"
        android:textColor="#55FFFFFF"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_next"
        android:text="Kaynak"
        android:textSize="10sp"
        android:textColor="#AAC8A45C"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/ravi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/source"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textSize="10sp"
        android:textColor="#55FFFFFF"
        android:maxLines="1" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg"
        android:src="@android:drawable/ic_media_play"
        android:scaleType="centerInside"
        android:contentDescription="Sonraki" />

    <ListView
        android:id="@+id/hadis_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/badge"
        android:layout_above="@id/ravi"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

</RelativeLayout>
